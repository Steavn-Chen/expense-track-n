<div class='row login-page'>
  <div class='col-xl-5 col-md-6 col-sm-8 m-auto'>
    <div class='card card-body'>
      {{> message}}
      <h1 class='text-center mt-3'>Login</h1>
      <form action='/users/login' method='POST'>
        <div class='form-group mt-2'>
          <label for='email' class='mt-2 form-group-email'><i class="far fa-envelope "></i> Email :</label>
          <input type='email' id='email' name='email' class='form-control mt-1' placeholder='Enter Email' />
        </div>
        <div class='form-group mt-2'>
          <label for='password' class='mt-2 form-group-password'><i class="fas fa-key"></i> Password :</label>
          <input type='password' id='password' name='password' class='form-control mt-1' placeholder='Enter Password' />
        </div>
        <div class="grid mt-4 d-md-flex justify-content-center">
          <button type="submit" class="btn btn-primary mx-2" id="loginSubmitBtn">Login</button>
          <a href="/auth/facebook" class="btn btn-info mx-2" id="loginFacebookBtn"><i
              class="fab fa-facebook-square"></i></a>
          <a href="/auth/google" class="btn btn-warning mx-2" id="loginFGoogleBtn"><i class="fab fa-google"></i></a>
          <a href="/auth/github" class="btn btn-success mx-2" id="loginFGoogleBtn"><i class="fab fa-github"></i></a>
        </div>
    </form>
    <p class='lead mt-4'>
      No Account?
      <a href='/users/register'>Register</a>
    </p>
  </div>
</div>
</div>