    <form action="/filter2">
      <div class="col row d-flex justify-content-center">
        <div class="row col-md">

          <div class='col-5 d-flex justify-content-center'>
            <input type='date' id='date' class='form-control' name='startDate' aria-describedby='passwordHelpInline'
              value="{{options.startDate}}" placeholder="2022/02/02" min="2000-01-01" max="{{options.endDate}}"
               />
          </div>
          <div class="col-2 my-auto">
            <p class=" my-auto d-flex justify-content-center text-dark text-align-center" >至</p>
          </div>
          <div class='col-5 d-flex justify-content-center'>
            <input type='date' id='date' class='form-control' name='endDate' aria-describedby='passwordHelpInline'
              value="{{options.endDate}}" placeholder="2022/02/02"  />
          </div>
        </div>
        <div class="row col-md ">
          <div class="col select-group">
            <select class="form-select btn-info" id="floatingSelectGrid" aria-label="Floating label select example"
              name="category">
              <option selected value="">全部類別</option>
              {{#each categories}}
              <option value="{{this.category}}" {{#is this.category ../options.category }} selected {{/is}}>
                {{this.category}}</option>
              {{/each}}
            </select>
          </div>
          <div class='col d-flex justify-content-center '>
            <button type="submit" class="button btn-success " style="margin-right:40px ;">送出</button>
            <button type="submit" class="button btn-danger ml-2" name="filterMethod" value="filterClear">清除</button>
          </div>
        </div>
      </div>
    </form>
  </div>
  <div class="total-demo col-11 mx-auto p-2">
    <div class="row bg-dark col-12 mx-auto">
      <div class="col-5 ">
        <p class="total-name ">總金額 : </p>
      </div>
      <div class="col-7 ">
        <p class="total-amount text-warning my-auto">{{totalAmount}} 元</p>
      </div>
    </div>
  </div>
  {{#if message}}
  <div class="message-err">
    {{message}}
  </div>
  {{/if}}
  <div class="list-demo">
    <ul class="list-group">
      {{#each records}}
      <li class="list-group-item ">
        <div class="row">
          <div class="col-md-3 col-sm-6 icon">
            <i class="{{this.icon}} fa-5x"></i>
          </div>
          <div class="col-md-3 col-sm-6  content">
            <div class=" name">
              {{this.name}}
            </div>
            <div class="date">
              {{this.date}}
            </div>
          </div>
          <div class="col-md-3 col-sm-6  amount">
            {{this.amount}} 元
          </div>
          <div class="col-md-3 col-sm-6  list-btn">
            <form action="/records/{{this._id}}/delete" method="post">
              <div class="btn-demo ">
                <a href="/records/{{this._id}}/edit" class="btn btn-secondary " id="editBtn">修改</a>
                <button type="submit" class="btn btn-danger " id="deleteBtn">刪除</button>
              </div>
            </form>
          </div>
        </div>
      </li>
      {{/each}}
    </ul>
  </div>
  <div class="d-grid gap-2 col-4 mt-4 mx-auto">
    <a href="/new" class="btn btn-warning createBtn">新增支出</a>
  </div>
</div>